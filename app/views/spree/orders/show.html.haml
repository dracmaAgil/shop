.row{"data-hook" => "checkout_header"}
  .col-md-12
    .breadcumb_area.bg-img{style: "background-image: url(/img/bg-img/breadcumb.jpg);"}
      .container.h-100
        .row.h-100.align-items-center
          .col-12
            .page-title.text-center
              %h2.taxon-title= t('spree.order')
%br/
%br/
.container
  .row
    .col-md-12
      %fieldset#order_summary{"data-hook" => ""}
        .cart-page-heading
          %h5= "#{accurate_title}: #{@order.number}"
          %br
          - if order_just_completed?(@order)
            %strong= t('spree.thank_you_for_your_order')
        #order{"data-hook" => ""}
          = render partial: 'spree/shared/order_details', locals: { order: @order }
        %br.clear/
        %p{"data-hook" => "links"}
          = link_to t('spree.back_to_store'), spree.root_path, class: 'btn essence-btn'
          - unless order_just_completed?(@order)
            - if try_spree_current_user && respond_to?(:account_path)
              = link_to t('spree.my_account'), spree.account_path, class: 'btn essence-btn'
